#!/bin/sh

# Prints the current volume or ðŸ”‡ if muted.

case $BUTTON in
	1) setsid -f "$TERMINAL" -e pulsemixer ;;
	2) pamixer -t ;;
	4) pamixer --allow-boost -i 5 ;;
	5) pamixer --allow-boost -d 5 ;;
	3) notify-send "Volume module" "\- Shows volume ï€¨ , ïª€ f muted.
- Middle click to mute.
- Scroll to change." ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

if [ $(pamixer --get-mute) = true ]; then
    echo  ïª€ && exit
fi

vol="$(pamixer --get-volume)"

if [ "$vol" -gt "70" ]; then
	icon=" ï€¨ "
elif [ "$vol" -gt "30" ]; then
	icon=" ï©½"
elif [ "$vol" -gt "0" ]; then
	icon=" ï€¦ "
else
        echo  ïª€ && exit
fi

echo "$icon $vol%"
